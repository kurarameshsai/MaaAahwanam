@model MaaAahwanam.Models.UserLoginDetails
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/SharedWeb/Mainmaster.cshtml";
}

@section Navigation
{
 <div class="breads">
    <div class="breads_inner">
        <div class="pageWidth">
            <div class="title">
                <h3>Members Area</h3>
            </div>
            <div class="breadcrumbs">
                <ul>
                    <li><a href="index.html">Home</a></li>
                    <li><i class="breads_arrow"></i></li>
                    <li>Members Area</li>
                </ul>
            </div>
        </div>
    </div>
</div>
}
<section>
    <div class="about_main">
        <div class="pageWidth">
            <div class="login-register">
                <div class="form register wow fadeInLeft animated animated" style="visibility: visible; animation-name: fadeInLeft;">
                    <h4><b>New User</b> Register Here<span></span></h4>
                    @using (Html.BeginForm("Index", "Signin", FormMethod.Post, new {@id = "register_form", @autocomplete = "off" }))
                    {  
                        <ul>
                            <li>
                                <label>First Name<span>*</span></label>                             
                                @Html.TextBoxFor(Model => Model.FirstName, new {  @id="firstname", @name="firstname",placeholder = "First Name", required = "required" })
                            </li>
                            <li>
                                <label>Last Name<span>*</span></label>                                
                                @Html.TextBoxFor(Model => Model.LastName, new { @id="lastname", @name="lastname", placeholder = "Last Name", required = "required" })
                            </li>
                        </ul>
                        <ul>
                            <li>
                                <label>Email<span>*</span></label>                            
                                @Html.TextBoxFor(Model => Model.UserName, new {@id="email", @name="email", placeholder = "Username", required = "required", @type = "email" })
                            </li>
                            <li>
                                <label>Phone Number<span>*</span></label>
                                @Html.TextBoxFor(Model => Model.UserPhone, new { @id = "mobile", @name = "mobile", placeholder = "Phone Number", required = "required", @type = "number" })
                            </li>
                        </ul>
                        <ul>
                            <li>
                                <label>Password<span>*</span></label>
                                @Html.PasswordFor(Model => Model.Password, new {  @name="password", placeholder = "Password", required = "required", @id = "PasswordValue_Reg" })
                            </li>
                            <li>
                                <label>Confirm Password<span>*</span></label>
                                @Html.PasswordFor(Model => Model.Password, new { @name = "confirmpassword", placeholder = "Re type Password", required = "required", @id = "ConfirmPassword" })
                            </li>
                        </ul>
                        <div class="clear"></div>
                        <div class="submit-btn">
                            <button class="btn btn-green" name="Command" value="Register" type="submit" onclick="check();"><i class="ti-user"></i> Register</button>                           
                        </div>
                        <div class="clear"></div>
                    }
                </div>
                <div class="form login wow fadeInRight animated animated" style="visibility: visible; animation-name: fadeInRight;">
                    <h4><b>Existing User</b> Login Here<span></span></h4>                   

                    @using (Html.BeginForm("Index", "signin", FormMethod.Post, new { @id = "login_form" }))
                    {
                        <ul>
                            <li class="full">
                                <label>User Name<span>*</span></label>                              
                                @Html.TextBoxFor(Model => Model.UserName, new {placeholder = "User Name", required = "required", @type = "email" })
                            </li>
                            <li class="full">
                                <label>Password<span>*</span></label>
                                @Html.PasswordFor(Model => Model.Password, new {placeholder = "Password", required = "required", @id = "PasswordValue_Login" })
                            </li>
                        </ul>
                        <div class="clear"></div>
                        <div class="submit-btn">
                            <button class="btn btn-green" name="Command" value="Authenticate" type="submit"><i class="ti-lock"></i> Log in</button>
                        </div>
                        <div class="forgot-password"><a class="popup-with-move-anim" href="#fpw">Forgot Passoword?</a></div>
                        <div class="clear"></div>
                    }
                    <!-- forgot password popup -->
                    <div class="zoom-anim-dialog mfp-hide small-dialog popup-box" id="fpw">
                        <h3>Forgot Password</h3>
            @using (Html.BeginForm("Index", "Signin", FormMethod.Post, new { @id = "forgot_form",@class="form popup_form", @autocomplete = "off" }))
                {
                        @*<form class="form popup_form" id="forgot_form" novalidate>*@
                            <ul>
                                <li class="full">
                                    <label>Email<span>*</span></label>
                                    @Html.TextBoxFor(Model => Model.UserName, new { @id = "email", @name = "email", placeholder = "Username", required = "required", @type = "email" })
                                    
                                </li>
                            </ul>
                            <div class="clear"></div>
                            <div class="submit-btn">
                                <button class="btn btn-red" name="Command" value="ForgotPassword" type="submit"><i class="ti-check"></i> Submit</button>
                              </div>
                            <div class="clear"></div>
                        @*</form>*@
            }
                    </div>
                    <!-- /forgot password popup -->

                </div>
                <div class="clear"></div>
            </div>

        </div>

    </div>
</section>
